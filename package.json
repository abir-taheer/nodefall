{
	"name": "nodefall",
	"version": "1.0.0",
	"description": "Spyfall game made with NodeJS and Socket-io",
	"main": "index.js",
	"scripts": {
		"test": "mocha",
		"start": "node index",
		"dev": "npx nodemon index.js --ignore './client/' --ignore node_modules",
		"build": "npx sequelize db:migrate",
		"prettier": "npx prettier --write .",
		"heroku-postbuild": "npx sequelize db:migrate && cd client && npm install && npm run build"
	},
	"dependencies": {
		"bcrypt": "^5.0.0",
		"body-parser": "latest",
		"connect-session-sequelize": "^6.1.1",
		"cookie-parser": "^1.4.5",
		"crypto-random-string": "^3.2.0",
		"dotenv": "latest",
		"express": "latest",
		"express-async-errors": "^3.1.1",
		"express-session": "^1.17.1",
		"express-socket.io-session": "^1.3.5",
		"morgan": "^1.10.0",
		"pg": "^8.2.1",
		"pg-native": "^3.0.0",
		"sequelize": "^5.21.10",
		"set-cookie-parser": "^2.4.6",
		"sinon": "^9.0.2",
		"socket.io": "^2.3.0",
		"sqlite3": "^4.2.0",
		"supertest": "^4.0.2"
	},
	"devDependencies": {
		"chai": "^4.2.0",
		"mocha": "^7.2.0",
		"nodemon": "^2.0.4",
		"prettier": "^2.0.5",
		"request": "^2.88.2",
		"sequelize-cli": "^5.5.1"
	},
	"prettier": {
		"useTabs": true,
		"tabWidth": 4,
		"arrowParens": "avoid",
		"trailingComma": "none",
		"semi": true,
		"singleQuote": true,
		"printWidth": 80
	},
	"mocha": {
		"recursive": true
	}
}
